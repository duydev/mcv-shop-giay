@model MVCGIAY.Models.SANPHAM

@{
    ViewBag.Title = "Chitietgiay";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 class="title text-center">Chi tiết sản phẩm</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Tên sản phẩm:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TenSP)
        </dd>

        <dt>
            Mã loại:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MaLoai)
        </dd>

        <dt>
            Đơn giá:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DonGia)
        </dd>

        <dt>
            Mô tả:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MoTa)
        </dd>

        <dt>
            Số lượng còn:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SLTon)
        </dd>

        <dt>
            Mã NCC:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.MaNCC)
        </dd>

        <dt>
            Ngày cập nhật:
        </dt>

        <dd>
            @String.Format("{0:dd/mm/yyyy}", Model.NgayCapNhat)
        </dd>

        <dt>
            Ảnh:
        </dt>

        <dd>
            <img src="@Url.Content("~/images/home/" + Model.Anh)"  width="120px"/>
        </dd>
        
    </dl>
</div>
<p>
    @Html.ActionLink("Chỉnh sửa", "Suagiay", new { id = Model.MaSP }) |
    @Html.ActionLink("Trở về", "Giay")
</p>
