<style>
    h6 {
        text-align: center;
        color: red
    }

    tr {
        height: auto;
    }
</style>
@{
    ViewBag.Title = "Dangnhap";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
@using (Html.BeginForm())
{
    <h2 class="title text-center">Đăng nhập</h2>
    <h6>@ViewBag.Thongbao</h6>
    <table align="center">

        <tr>
            <td>Tên đăng nhập:</td>
            <td>
                @Html.TextBox("TenDN")

                @ViewData["Loi1"]
            </td>
        </tr>
        <tr>
            <td>Mật khẩu:</td>
            <td>
                @Html.Password("Matkhau")
                @ViewData["Loi2"]
            </td>
        </tr>
        <tr>
            <td style="padding-left:10%">
                <br />
                <button type="submit" class="btn btn-default" value="Đăng nhập">Đăng nhập</button><br />
            </td>
            <td style="padding-left:30%">
                <br />
                <a href="@Url.Action("Dangky","User")"></a>
                <button type="submit" class="btn btn-default" value="Đăng ký">Đăng ký</button>
            </td>
        </tr>
    </table>
    <table>
        <tr>
            <td style="padding-left:195%">
                <a href="/User/LoginFaceBook" class="btn">
                    <i class="fa fa-facebook"></i>
                    <span class="hidden-xs">Facebook</span>
                </a>
            </td>
            <td style="padding-left:235%">
                <a href="#" class="btn text-danger">
                    <i class="fa fa-google-plus"></i>
                    <span class="hidden-xs">Google+</span>
                </a>
            </td>
        </tr>
        @*<div class="navbar-right social-icons" style="font-size:1.5em;padding-right:40%">
                <ul>
                    <li><a href="/User/LoginFaceBook" class="fa fa-facebook icon-border facebook"> Facebook</a></li> &nbsp;
                    <li><a href="#" class="fa fa-google-plus icon-border googleplus"> Google</a></li>
                </ul>
            </div>*@
    </table>
}