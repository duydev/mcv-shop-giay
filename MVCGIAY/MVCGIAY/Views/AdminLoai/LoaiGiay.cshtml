@model IEnumerable<MVCGIAY.Models.CATEGORY>

@{
    ViewBag.Title = "LoaiGiay";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 class="title text-center">QUẢN LÝ THÔNG TIN LOẠI SẢN PHẨM</h2>

<p>
    @Html.ActionLink("Thêm loại sản phẩm mới", "Themloai")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NAME)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NAME)
        </td>
        <td>
            @Html.ActionLink("Sửa", "Sualoaigiay", new { id=item.ID }) |
            @Html.ActionLink("Xóa", "Xoaloai", new { id=item.ID })
        </td>
    </tr>
}

</table>
